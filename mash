#!/usr/bin/env bash
set -ueo pipefail
dateTime(){ date -u '+%Y-%m-%dT%H:%M:%SZ'; }
rundir=$(cd -P -- "$(dirname -- "$0")" && printf '%s\n' "$(pwd -P)")
cd "$rundir"
# {make.sh user}

CONTAINER_NAME="debian"
IMAGE_NAME="${CONTAINER_NAME}"
IMAGE_REPO="docker.io/${IMAGE_NAME}"
IMAGE_TAG="11"


# Examples

run:task:name () {
  echo "I am name"
}
run:other(){
  printf "I'm %s\n" "$*"
}


# Common

run:watch () {
  nodemon -e sh,ts,json -i .git -x "$@"
} 

run:docker () {
  docker run \
   --interactive --tty \
   --env DEBUG=true \
   --rm \
   --name "${CONTAINER_NAME}" \
   "${IMAGE_REPO}:${IMAGE_TAG}" \
   "$@"
}

run:whatever:seconds(){
  DATE=$(date +%s)
  echo "$DATE" "$@"
}


# Project

# dump just the header
run:header () {
  set +x #output based
  grep -B200 -e '{make\.sh user}' mash
}

# dump just the footer
run:footer () {
  set +x # output based
  grep -A200 -e '{make\.sh common}' mash
}

run:dump(){
  run:header
  echo 
  run:footer
}


# {make.sh common}
run:completion:words(){
  declare -F | awk '/^declare -f run:/ { if (/run:completion:/) { next; }; printf("%s\n", substr($0,16)); }'
}
run:help(){
  set +x
  echo "Commands:"
  run:completion:words | awk '{ printf("  %s\n", $0); }'
  exit 1
}
[ -z "${1:-}" ] && run:help
cmd=$1
shift
[[ "$cmd" == completion:* ]] || set -x
run:"$cmd" "$@"
